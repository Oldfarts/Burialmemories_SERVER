<%- include ../layouts/header.ejs %>
<div class="page-data">
    <form method="post" action="/customers/edit/<%=data[0].id%>">
        <table cellpadding="11">
            <tr>
                <td class="label">Name</td>
                <td><input type="text" name="name" value="<%=data[0].name%>" required /></td>
            </tr>
            <tr>
                <td class="label">Address</td>
                <td><textarea name="address" required cols="30" rows="5"><%=data[0].address%></textarea></td>
            </tr>
            <tr>
                <td class="label">Email</td>
                <td><input type="text" value="<%=data[0].email%>" name="email" required /></td>
            </tr>
            <tr>
                <td class="label">Phone</td>
                <td><input type="text" name="phone" value="<%=data[0].phone%>" required /></td>
            </tr>
            <tr>
                <td class="label">Website</td>
                <td><input type="text" name="website" value="<%=data[0].website%>" required /></td>
            </tr>
            <tr>
                <td class="label">Birthdate</td>
                <td><input type="text" name="birthdate" value="<%=data[0].birthdate%>" required /></td>
            </tr>
            
            <tr>
                <td class="label">Deathdate</td>
                <td><input type="text" name="deathdate" value="<%=data[0].deathdate%>" /></td>
            </tr>
            <tr>
                <td class="label">State</td>
                <td><input type="text" name="state" value="<%=data[0].state%>" required /></td>
            </tr>
            <tr>
                <td class="label">Country</td>
                <td><input type="text" name="country" value="<%=data[0].country%>" required /></td>
            </tr>
            <tr>
                <td class="label">Socialnumber</td>
                <td><input type="text" name="socialnumber" value="<%=data[0].socialnumber%>" required /></td>
            </tr>
            <tr>
                <td class="label"></td>
                <td>
                    <button type="submit">Save</button>
                    <button type="button" onClick="cancelAdd()">Cancel</button>
                </td>
            </tr>
        </table>
    </form> 
</div>
<%- include ../layouts/footer.ejs %>
